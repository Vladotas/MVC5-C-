@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right"
        >
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "fa fa-download", @class="nav-link right" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link right">Cerrar sesión</a></li>
    </ul>

    }
}
else
{
<ul class="nav navbar-nav my-2 my-lg-0">
    <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", target = "_blank", @class = "btn btn-success", role = "button", style="margin: 10px" })</li>

    <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", target = "_blank", @class = "btn btn-outline-success", role = "button", style="margin: 10px" })</li>
</ul>
}


